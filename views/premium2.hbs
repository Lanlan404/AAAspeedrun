            <div class="ligneGoogle">
              <div>or</div>
            </div>

            <form method="POST" action="/signup">
              <label>Username</label>
              <input
                type="string"
                name="username"
                placeholder="Your username"
              />

              <label>E-mail <i class="fas fa-at"> </i></label>
              <input type="email" name="email" placeholder="Your e-mail" />

              
              <label>Password</label>
              
              <input
                type="password"
                name="password"
                placeholder="Your password"
                id="typedPwd"
              />              
              <button id="show-pwd-btn" type="button" onclick="MyPwdShow()"; >Show <i id="eyeToggle" class="fas fa-eye"></i>
              </button>
              

              <label>Confirm password</label>
              <input
                type="password"
                name="confirmPassword"
                placeholder="Confirm password"
              />

              <button class="btn auth-btn" type="submit">Sign up</button>

              {{#if errorMessage}}
                <p>{{errorMessage}}</p>
              {{/if}}

            </form>
          </div>
        </div>
      </div>
