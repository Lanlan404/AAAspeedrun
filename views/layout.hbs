          {{#if user}}
          <form id="logout-form" action="/user/logout" method="POST">
            <button>Logout</button>
          </form>
          {{else}}
          <a href="/user/login">LOGIN</a>
          <a href="/user/signup">SIGN UP</a>
          {{/if}}

          {{! <a href="#">SEARCH üîç</a> }}
          <a href="/premium">PREMIUM</a>
          <a href="/about">ABOUT</a>
        </div>
      </div>
    </div>

    <!-- navbar Desktop -->
    <div class="navbar-desktop">
      <a href="/">
        <img src="/images/logoBam.svg" alt="logo" width="180px" />
      </a>
      <a href="/game/list">Games</a>
      <a href="/premium">
        <img src="/images/medal.svg" alt="premium Subscribe" width="40px" />
      </a>
      <div>
