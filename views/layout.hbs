<body>

  <div id="NAVBAR">
    <!-- navbar Mobile -->
    <div class="navbar-mobile">
      <i class="fas fa-bars"></i>

      <div class="modal">
        <div class="navbar-mobile-list">
          <a href="/">
            <img id="logoSymbol" src="/images/logoSymbol.svg" alt="logoSymbol" width="100px" />
