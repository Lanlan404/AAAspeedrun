{{!-- game-new --}}
<div class="game-new">
  <h2 id="addGameTitle">
    Add a new game
  </h2>

  <div id="newGame-card" >
    <form action="/game/new" method="POST" class="newGame-center-wrap">
      <label>Title:</label>
        <input type="text" name="title" placeholder="Game title"
 />
      
      
      <label>Year:</label>
        <input type="number" name="year" min="1980" max="2022" placeholder="Release date" />
      


    
      <label> Cover: </label>
        <input type="file" name="cover" placeholder="Image of game cover"></input>
    

      <button type="submit" id="newGame-submit-btn">Create</button>
    </form>
  </div>
  </div>



      